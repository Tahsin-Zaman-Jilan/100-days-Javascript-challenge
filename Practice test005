//005 Coding challenge
function Calage(bill_value) {

    if (bill_value >= 50 && bill_value <= 300) {
        return bill_value * (15 / 100);
    }

    else {

        return bill_value * (20 / 100);

    }


}

const total = []
const tip = []
const bill = [22, 295, 176, 440, 37, 175]

for (let i = 0; i < bill.length; i++) {
    const a = Calage(bill[i])



    tip.push(a)
    let b = bill[i] + a
    total.push(b)
}


console.log(tip)
console.log(bill)
console.log(total)


