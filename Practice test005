let sum = 0

//taking an array in the function 
function agebro(arr1) {

    for (let i = 0; i < arr1.length; i++) {

        sum = arr1[i] + sum;


    }

    return sum = sum / arr1.length

}
const c = agebro([1, 2, 3, 4, 5])

console.log(c)
